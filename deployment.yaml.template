apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: ${component.java-application.name}
  namespace: ${component.java-application.namespace}
  labels:
    provider: agilestacks.com
    qualifier: application
spec:
  replicas: 1
  template:
    metadata:
      name: ${component.java-application.name}
      namespace: ${component.java-application.namespace}
      labels:
        provider: agilestacks.com
        qualifier: application
    spec:
      containers:
      - name: api
        image: ${component.ecr.image}
        imagePullPolicy: Always
        ports:
        - name: http
          containerPort: ${component.java-application.port}
        readinessProbe:
          httpGet:
            path: /status
            port: ${component.java-application.port}
        livenessProbe:
          httpGet:
            path: /status
            port: ${component.java-application.port}
          initialDelaySeconds: 60
          timeoutSeconds: 3

