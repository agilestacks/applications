apiVersion: v1
kind: Namespace
metadata:
  name: ${application.namespace}
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: ${application.name}-${application.target.environment}
  namespace: ${application.namespace}
  labels:
    app: ${application.name}-${application.target.environment}
spec:
  replicas: ${application.replicas}
  template:
    metadata:
      name: ${application.name}-${application.target.environment}
      namespace: ${application.namespace}
      labels:
        app: ${application.name}-${application.target.environment}
        version: ${application.version}
    spec:
      containers:
      - name: application
        image: ${application.target.ecr}
        ports:
        - name: http
          containerPort: 8080
        readinessProbe:
          httpGet:
            path: /status
            port: http
          initialDelaySeconds: 5
        livenessProbe:
          httpGet:
            path: /status
            port: http
          initialDelaySeconds: 5
          timeoutSeconds: 1
---
apiVersion: v1
kind: Service
metadata:
  name: ${application.name}-${application.target.environment}
  namespace: ${application.namespace}
  labels:
    app: ${application.name}-${application.target.environment}
spec:
  ports:
  - port: 80
    targetPort: http
  selector:
    app: ${application.name}-${application.target.environment}
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: ${application.name}-${application.target.environment}
  namespace: ${application.namespace}
  labels:
    app: ${application.name}-${application.target.environment}
spec:
  rules:
  - host: ${application.target.fqdn}
    http:
      paths:
      - path: ${application.path}
        backend:
          serviceName: ${application.name}-${application.target.environment}
          servicePort: 80
