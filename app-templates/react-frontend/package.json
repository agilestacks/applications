{
  "name": "basic-react-boilerplate",
  "version": "1.0.0",
  "description": "Basic boilerplate with React, ReactBootstrap, Babel and Webpack",
  "scripts": {
    "start": "NODE_ENV=dev webpack-dev-server --open --config webpack.dev.js",
    "watch": "webpack --watch",
    "build": "NODE_ENV=production webpack --config webpack.prod.js",
    "lint": "eslint --ext .jsx,.js . && sass-lint -v",
    "test": "jest",
    "junit:lint": "eslint -o eslint-junit.xml -f junit --ext .jsx,.js . && sass-lint -o sass-lint-junit.xml -f junit -v",
    "junit:test": "jest --ci --reporters=jest-junit"
  },
  "keywords": [],
  "author": "hydrocarbons",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "atob": "^2.1.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.9",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "file-loader": "^1.1.6",
    "html-loader": "^0.5.5",
    "jest": "^23.2.0",
    "jest-junit": "^5.1.0",
    "macaddress": "^0.2.9",
    "node-sass": "^4.9.0",
    "randomatic": "^3.0.0",
    "react-test-renderer": "^16.4.1",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.20.2",
    "webpack-dev-server": "^2.11.1"
  },
  "dependencies": {
    "@blueprintjs/core": "^2.3.1",
    "@blueprintjs/icons": "^2.2.1",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^0.1.18",
    "html-webpack-plugin": "^3.2.0",
    "prop-types": "^15.6.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.3.1",
    "react-transition-group": "^2.4.0",
    "uglifyjs-webpack-plugin": "^1.2.6",
    "webpack": "^3.12.0",
    "webpack-merge": "^4.1.1"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "\\.test\\.jsx?$",
    "moduleNameMapper": {
      "\\.(eot|woff2?|otf|ttf|svg|png|jpe?g|gif)(\\?\\S*)?$": "<rootDir>/mocks/fileMock.js",
      "\\.s?css$": "<rootDir>/mocks/styleMock.js"
    },
    "setupFiles": [
      "<rootDir>/.jest-provide-react.js"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "./tests-junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
