---
apiVersion: v1
kind: Secret
type: goofysflex
metadata:
  name: "${application.name}-bucket-${application.bucket.name}"
stringData:
  accesskey: ${application.bucket.accessKey}
  secretkey: ${application.bucket.secretKey}
---
kind: PersistentVolume
apiVersion: v1
metadata:
  name: "${application.name}-bucket-${application.bucket.name}"
  labels:
    app: "${application.name}"
    bucket: "${application.bucket.name}"
spec:
  storageClassName: goofys
  accessModes:
  - ReadWriteOnce
  capacity:
    storage: "${application.bucket.capacity}"
  volumeMode: Filesystem
  flexVolume:
    driver: "goofysflex"
    secretRef:
      name: "${application.name}-bucket-${application.bucket.name}"
    options:
      # Required
      bucket: "${application.bucket.name}"
      endpoint: "${application.bucket.endpoint}"
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: "${application.name}-${application.bucket.name}-bucket"
spec:
  storageClassName: goofys
  accessModes:
    - ReadWriteOnce
  volumeMode: Filesystem
  resources:
    requests:
      storage: "${application.bucket.capacity}"
  selector:
    matchLabels:
      app: "${application.name}"
      bucket: "${application.bucket.name}"
